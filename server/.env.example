# Server Environment Variables
# ============================================================

# Server Configuration
NEST_PORT=3001
# 또는 PORT=3001
NEST_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Redis Configuration (Required)
REDIS_URL=redis://localhost:6379

# Database Configuration (Optional - 없으면 DatabaseService 비활성화)
DB_URL=postgresql://user:password@localhost:5432/dbname
# 또는 DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# AWS Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# DynamoDB Configuration (Optional)
DYNAMODB_ENDPOINT=
DYNAMO_TABLE_PREFIX=

# Python Service Configuration
PYTHON_SERVICE_URL=http://localhost:8000

# Internal API Authentication (Required)
INTERNAL_API_TOKEN=your-secret-token-here
SKIP_TOKEN_AUTH=false

# OpenRouter AI Configuration (Optional)
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SUMMARY_MODEL=anthropic/claude-haiku-4.5
